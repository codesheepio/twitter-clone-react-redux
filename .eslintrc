{
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
  },
  "extends": "airbnb",
  "plugins": [
    "import",
  ],
  "rules": {
    "class-methods-use-this": "off",
    "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],
    "react/prefer-stateless-function": "off",
    "react/require-extension": "off",
    "semi": ["error", "never"],
  }
}
